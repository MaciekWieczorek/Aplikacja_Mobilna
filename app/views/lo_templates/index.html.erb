<p id="notice"><%= notice %></p>

<h1>Lo Templates</h1>

<table>
  <thead>
    <tr>
      <th>Name of template</th>
      <th>Number of templates</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lo_templates.each do |lo_template| %>
      <tr>
        <td><%= lo_template.name_of_template %></td>
        <td><%= lo_template.number_of_templates %></td>
        <td><%= link_to 'Show', lo_template %></td>
        <td><%= link_to 'Edit', edit_lo_template_path(lo_template) %></td>
        <td><%= link_to 'Destroy', lo_template, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

